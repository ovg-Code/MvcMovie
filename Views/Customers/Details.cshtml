@model ari2._0.Models.Customer
@{
    ViewData["Title"] = "Detalles del Cliente";
    Layout = "_LayoutDashboard";
}
@section Styles {
    <link rel="stylesheet" href="~/css/views/form-views.css" asp-append-version="true" />
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="page-title mb-1">@(Model.Actor?.FirstFirstName ?? "Cliente") @(Model.Actor?.LastFirstName ?? "")</h1>
        <p class="page-subtitle mb-0">Detalles del Cliente</p>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-secondary-custom me-2">
            <i class="bi bi-arrow-left me-2"></i>Volver
        </a>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary-custom">
            <i class="bi bi-pencil me-2"></i>Editar
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="form-container mb-4">
            <div class="form-section">
                <h6 class="form-section-title"><i class="bi bi-person-badge"></i>Información del Cliente</h6>
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label text-muted small">Actor</label>
                        <p class="mb-0 fw-medium">@(Model.Actor?.FirstFirstName ?? "-") @(Model.Actor?.LastFirstName ?? "")</p>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label text-muted small">Estado Público</label>
                        <p class="mb-0 fw-medium">@(Model.CustomerPublicStatusType?.Name ?? "-")</p>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label text-muted small">Agente de Retención</label>
                        <p class="mb-0">
                            @if (Model.IsAgentRetention == true) {
                                <span class="badge bg-success">Sí</span>
                            } else if (Model.IsAgentRetention == false) {
                                <span class="badge bg-secondary">No</span>
                            } else {
                                <span>-</span>
                            }
                        </p>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label text-muted small">Leasing</label>
                        <p class="mb-0">
                            @if (Model.IsLeasing == true) {
                                <span class="badge bg-success">Sí</span>
                            } else if (Model.IsLeasing == false) {
                                <span class="badge bg-secondary">No</span>
                            } else {
                                <span>-</span>
                            }
                        </p>
                    </div>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.OtherData))
            {
                <div class="form-section">
                    <h6 class="form-section-title"><i class="bi bi-code-square"></i>Otros Datos (JSON)</h6>
                    <pre class="bg-light p-3 rounded mb-0"><code>@Model.OtherData</code></pre>
                </div>
            }
        </div>
    </div>

    <div class="col-lg-4">
        <div class="form-container">
            <div class="form-section">
                <h6 class="form-section-title"><i class="bi bi-info-circle"></i>Estado</h6>
                <div class="text-center py-3">
                    @if (Model.IsEnabled == true) {
                        <span class="status-badge status-active fs-5">
                            <i class="bi bi-circle-fill"></i> Activo
                        </span>
                    } else if (Model.IsEnabled == false) {
                        <span class="status-badge status-inactive fs-5">
                            <i class="bi bi-circle-fill"></i> Inactivo
                        </span>
                    } else {
                        <span class="status-badge status-undefined fs-5">
                            <i class="bi bi-circle"></i> Sin definir
                        </span>
                    }
                </div>
            </div>

            <div class="form-section">
                <h6 class="form-section-title"><i class="bi bi-clock-history"></i>Auditoría</h6>
                <div class="mb-3">
                    <label class="form-label text-muted small">Creado</label>
                    <p class="mb-0 small">@(Model.CreatedAt?.ToString("dd/MM/yyyy HH:mm") ?? "-")</p>
                    <p class="mb-0 text-muted small">Por: @(Model.CreatedBy ?? "-")</p>
                </div>
                <div>
                    <label class="form-label text-muted small">Última Actualización</label>
                    <p class="mb-0 small">@(Model.UpdatedAt?.ToString("dd/MM/yyyy HH:mm") ?? "-")</p>
                    <p class="mb-0 text-muted small">Por: @(Model.UpdatedBy ?? "-")</p>
                </div>
            </div>
        </div>
    </div>
</div>
