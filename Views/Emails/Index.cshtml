@model IEnumerable<ari2._0.Models.Email>
@{
    ViewData["Title"] = "Correos Electr贸nicos";
    Layout = "_LayoutDashboard";
}
@section Styles {
    <link rel="stylesheet" href="~/css/views/list-views.css" asp-append-version="true" />
}

@await Html.PartialAsync("_AlertMessages")
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="page-title mb-1">Correos Electr贸nicos</h1>
        <p class="results-count mb-0"><span id="totalCount">@Model.Count()</span> registros totales</p>
    </div>
    <a asp-action="Create" class="btn btn-primary-custom"><i class="bi bi-plus-lg me-2"></i>Nuevo Correo</a>
</div>
<div class="filter-container mb-4">
    <div class="row g-3 align-items-center">
        <div class="col-md-8">
            <div class="position-relative">
                <i class="bi bi-search position-absolute" style="left: 1rem; top: 50%; transform: translateY(-50%); color: #94a3b8;"></i>
                <input type="text" id="searchInput" class="form-control search-input ps-5" placeholder="Buscar...">
            </div>
        </div>
        <div class="col-md-4">
            <select id="statusFilter" class="form-select search-input">
                <option value="">Todos los estados</option>
                <option value="true">Activos</option>
                <option value="false">Inactivos</option>
            </select>
        </div>
    </div>
</div>
<div class="bg-white rounded-3 shadow-sm" style="border: 1px solid #e2e8f0;">
    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table data-table mb-0" id="emailsTable">
                <thead><tr><th>Direcci贸n</th><th>Actor</th><th>Estado</th><th class="text-end">Acciones</th></tr></thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr data-status="@(item.IsEnabled?.ToString().ToLower() ?? "")">
                            <td><div class="item-name">@item.Definition</div></td>
                            <td class="item-info">@(item.Actor?.FirstFirstName ?? "-")</td>
                            <td>
                                @if (item.IsEnabled == true) { <span class="status-badge status-active"><i class="bi bi-circle-fill"></i>Activo</span> }
                                else if (item.IsEnabled == false) { <span class="status-badge status-inactive"><i class="bi bi-circle-fill"></i>Inactivo</span> }
                                else { <span class="status-badge status-undefined"><i class="bi bi-circle"></i>Sin definir</span> }
                            </td>
                            <td class="text-end">
                                <a asp-action="Details" asp-route-id="@item.Id" class="action-btn" title="Ver Detalles">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="action-btn" title="Editar"><i class="bi bi-pencil"></i></a>
                                <button type="button" data-delete-url="@Url.Action("Delete", new { id = item.Id })" data-item-name="Correo" class="action-btn delete border-0 bg-transparent" title="Eliminar"><i class="bi bi-trash"></i></button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="table-footer"><small class="text-muted">Mostrando <span id="visibleCount">@Model.Count()</span> de <span id="totalCountFooter">@Model.Count()</span> registros</small></div>
    }
    else
    {
        <div class="empty-state">
            <div class="empty-state-icon"><i class="bi bi-envelope"></i></div>
            <h3 class="empty-state-title">No hay correos registrados</h3>
            <p class="empty-state-text">Comienza agregando tu primer correo electr贸nico</p>
            <a asp-action="Create" class="btn btn-primary-custom mt-3"><i class="bi bi-plus-lg me-2"></i>Crear Primer Correo</a>
        </div>
    }
</div>
@section Scripts {
    <script src="~/js/views/list-views.js" asp-append-version="true"></script>
    <script>initListView({searchInputId: 'searchInput', filterSelectId: 'statusFilter', tableId: 'emailsTable'});</script>
}
