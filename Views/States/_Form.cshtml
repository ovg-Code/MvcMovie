@model ari2._0.Models.State
<div class="form-section">
            <h6 class="form-section-title"><i class="bi bi-map"></i>Información</h6>
            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="CountriesId" class="form-label">País</label>
                    <select asp-for="CountriesId" asp-items="ViewBag.Countries" class="form-select">
                        <option value="">Seleccione...</option>
                    </select>
                    <span asp-validation-for="CountriesId" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Name" class="form-label">Nombre</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="IsEnabled" class="form-label">Estado</label>
                    <select asp-for="IsEnabled" class="form-select">
                        <option value="">Seleccione...</option>
                        <option value="true">Sí</option>
                        <option value="false">No</option>
                    </select>
                    <span asp-validation-for="IsEnabled" class="text-danger"></span>
                </div>
            </div>
        </div>