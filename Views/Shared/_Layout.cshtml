<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ARIV2 CRM</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">ARIV2 CRM</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Inicio</a></li>
                        
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Clientes</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Actors" asp-action="Index">Actores</a></li>
                                <li><a class="dropdown-item" asp-controller="Customers" asp-action="Index">Clientes</a></li>
                                <li><a class="dropdown-item" asp-controller="ActorRelationships" asp-action="Index">Relaciones</a></li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Contacto</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Phones" asp-action="Index">Teléfonos</a></li>
                                <li><a class="dropdown-item" asp-controller="Emails" asp-action="Index">Correos</a></li>
                                <li><a class="dropdown-item" asp-controller="Addresses" asp-action="Index">Direcciones</a></li>
                                <li><a class="dropdown-item" asp-controller="SocialNetworks" asp-action="Index">Redes Sociales</a></li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Identificación</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="IdentityCards" asp-action="Index">Documentos</a></li>
                                <li><a class="dropdown-item" asp-controller="IdentityCardTypes" asp-action="Index">Tipos de Documento</a></li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Ubicaciones</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Countries" asp-action="Index">Países</a></li>
                                <li><a class="dropdown-item" asp-controller="States" asp-action="Index">Estados</a></li>
                                <li><a class="dropdown-item" asp-controller="Cities" asp-action="Index">Ciudades</a></li>
                                <li><a class="dropdown-item" asp-controller="Municipalities" asp-action="Index">Municipios</a></li>
                                <li><a class="dropdown-item" asp-controller="Neighborhoods" asp-action="Index">Barrios</a></li>
                                <li><a class="dropdown-item" asp-controller="ZipCodes" asp-action="Index">Códigos Postales</a></li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Catálogos</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Genders" asp-action="Index">Géneros</a></li>
                                <li><a class="dropdown-item" asp-controller="ActorTypes" asp-action="Index">Tipos de Actor</a></li>
                                <li><a class="dropdown-item" asp-controller="PhoneTypes" asp-action="Index">Tipos de Teléfono</a></li>
                                <li><a class="dropdown-item" asp-controller="AddressTypes" asp-action="Index">Tipos de Dirección</a></li>
                                <li><a class="dropdown-item" asp-controller="RelationshipTypes" asp-action="Index">Tipos de Relación</a></li>
                                <li><a class="dropdown-item" asp-controller="CustomerPublicStatusTypes" asp-action="Index">Estados de Cliente</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @await Html.PartialAsync("_DeleteConfirmationModal")

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/delete-confirmation.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
