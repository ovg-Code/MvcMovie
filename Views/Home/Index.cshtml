@{
    ViewData["Title"] = "Dashboard";
    Layout = "_LayoutDashboard";
}

<!-- Hero Section con Logo -->
<main role="main">
    <section class="hero-welcome" aria-label="Bienvenida">
        <div class="text-center">
            <img src="~/images/ari-v2-logo.png" 
                 alt="Logo ARI 2.0 - Sistema de Gestión de Relaciones con Clientes" 
                 class="hero-logo"
                 width="600"
                 height="200"
                 asp-append-version="true">
            
            <h1 class="welcome-text mt-4">¡Bienvenido a ARI!</h1>
            
            <div class="badges-container mt-4" role="list" aria-label="Características principales">
                <div class="badge-item" role="listitem">
                    <i class="bi bi-people-fill" aria-hidden="true"></i>
                    <span>Gestión de Clientes</span>
                </div>
                <div class="badge-item" role="listitem">
                    <i class="bi bi-telephone-fill" aria-hidden="true"></i>
                    <span>Contactos</span>
                </div>
                <div class="badge-item" role="listitem">
                    <i class="bi bi-geo-alt-fill" aria-hidden="true"></i>
                    <span>Ubicaciones</span>
                </div>
                <div class="badge-item" role="listitem">
                    <i class="bi bi-card-text" aria-hidden="true"></i>
                    <span>Documentación</span>
                </div>
                <div class="badge-item" role="listitem">
                    <i class="bi bi-diagram-3-fill" aria-hidden="true"></i>
                    <span>Relaciones</span>
                </div>
            </div>
        </div>
    </section>
</main>

<style>
    .hero-welcome {
        padding: 3rem 0;
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 60vh;
    }
    
    .hero-logo {
        max-width: 600px;
        width: 100%;
        height: auto;
        filter: drop-shadow(0 4px 6px rgba(0,0,0,0.1));
        animation: fadeInUp 0.8s ease-out;
    }
    
    .welcome-text {
        color: #1e3a8a;
        font-weight: 600;
        font-size: 2rem;
        animation: fadeIn 1s ease-out 0.3s both;
    }
    
    .badges-container {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        justify-content: center;
        animation: fadeIn 1s ease-out 0.6s both;
    }
    
    .badge-item {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1.5rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-radius: 50px;
        font-size: 0.9rem;
        font-weight: 500;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
    }
    
    .badge-item:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 12px rgba(0,0,0,0.15);
    }
    
    .badge-item i {
        font-size: 1.1rem;
    }
    
    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    @@keyframes fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }
    
    @@media (max-width: 768px) {
        .hero-logo {
            max-width: 90%;
        }
        
        .welcome-text {
            font-size: 1.5rem;
        }
        
        .badges-container {
            gap: 0.5rem;
        }
        
        .badge-item {
            padding: 0.5rem 1rem;
            font-size: 0.85rem;
        }
    }
</style>
